<div class="breadcrumb-area bg-gray menuBarTop">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/account">Account</a>
                </li>
                <li class="active">Add New Address</li>
            </ul>
        </div>
    </div>
</div>

<form id="" action="/postAddress" method="post">
    <div class="checkout-wrap pt-20">

        <div class="row">

            <div class="col-lg-6 mx-auto">
                <div class="billing-info-wrap mr-50">

                    <h3>Enter Your Details</h3>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="billing-info mb-20 form-floating">
                                <input type="text" name="Name" class="form-control" id="floatingName" placeholder=".">
                                <label for="floatingName">Your Name </label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="billing-info mb-20 form-floating">

                                <input name="HouseNo" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">House number and street name.</label>
                            </div>
                            <div class="billing-info mb-20 form-floating">
                                <input name="Street" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">Street Address.</label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="billing-info mb-20 form-floating">
                                <input name="TownCity" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">Town / City</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="billing-info mb-20 form-floating">
                                <input name="State" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">State</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="billing-info mb-20 form-floating">
                                <input name="Country" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">Country</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="billing-info mb-20 form-floating">
                                <input name="PostCode" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">Post Code / ZIP</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="billing-info mb-20 form-floating">
                                <input name="Mobile" placeholder="." type="text" class="form-control" id="1">
                                <label for="1">Mobile</label>
                            </div>
                        </div>
                        <div class="text-center" >
                            <button class="btn btn-primary " type="submit">Submit</button>
                            <button class="btn btn-primary " type="reset">Reset</button>
                            <button class="btn btn-primary " onclick="history.back()">Cancel</button>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>
</form>


